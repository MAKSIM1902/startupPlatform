@model IEnumerable<CrowdFundingProject.Models.User>

<h2>Список пользователей</h2>
<table class="table">
    @foreach (var user in Model)
    {
    <tr>
        <td>@user.Email</td>
        <td>
            <div>Статус: @user.IsBlocked </div>
        </td>
        <td>
            <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-userid="@user.Id">Права доступа</a>
        </td>
        <td>
            <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post">
                <button type="submit" class="btn btn-sm btn-danger">
                    Delete
                </button>
            </form>
        </td>
        <td>
            <form asp-action="BlockUser" asp-route-id="@user.Id" method="post">
                <button type="submit" class="btn btn-sm btn-danger">
                    Block
                </button>
            </form>
        </td>
        <td>
            <form asp-action="UnblockUser" asp-route-id="@user.Id" method="post">
                <button type="submit" class="btn btn-sm btn-danger">
                    Unblock
                </button>
            </form>
        </td>
    </tr>
    }
</table>