@model Сrowdfunding.Models.Campaign
@{
}
<form method="post" asp-action="Rewards" asp-controller="Home">
    <input type="hidden" name="CampaignId" value="@Model.Id" />
    <div class="form-group">
        <label>Description:</label>
        <input type="text" class="form-control" name="Description" />
    </div>
    <div class="form-group">
        <label>Delivery:</label>
        <input type="text" class="form-control" name="Delivery" />
    </div>
    <div class="form-group">
        <label>Count:</label>
        <input type="number" class="form-control" min="0" step="1" name="Count" />
    </div>
    <div class="form-group">
        <label>Price($):</label>
        <input type="number" class="form-control" name="Price" />
    </div>
    <input type="submit" value="Submit" />
</form>
