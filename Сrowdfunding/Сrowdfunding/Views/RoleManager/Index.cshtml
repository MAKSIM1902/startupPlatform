@model List<Сrowdfunding.Models.ViewModels.RoleViewModel>
@{
}
<table class="table table-striped">
    <thead>
        <tr>
            <th>Email</th>
            <th>Roles</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>@string.Join(", ", user.Roles.ToList())</td>
                <td>
                    <a class="btn btn-primary" asp-controller="RoleManager" asp-action="Manage" asp-route-userId="@user.UserId">Manage</a>
                </td>
            </tr>
        }
    </tbody>
</table>